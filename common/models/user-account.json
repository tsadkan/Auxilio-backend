{
  "name": "UserAccount",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": false
  },
  "hidden": [
    "password"
  ],
  "mixins": {
    "TimeStamp": true,
    "SoftDelete": true,
    "RowCount": true
  },
  "protected": [
    "password"
  ],
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "fullName": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "required": true
    },
    "phoneNumber": {
      "type": "string"
    },
    "profilePicture": {
      "type": "string",
      "default": "avatar_anonymous.png"
    },
    "password": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "CustomAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "role": {
      "type": "belongsTo",
      "model": "UserRole"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "login"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "logoutUser"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "replaceById"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "registerMember"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "updateMember"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "appResetPassword"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "appVerifyResetPassword"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "updateMyProfile"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "updatePassword"
    }
  ],
  "methods": {}
}
