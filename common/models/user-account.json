{
  "name": "UserAccount",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": false
  },
  "hidden": ["password"],
  "mixins": {
    "TimeStamp": true,
    "SoftDelete": true,
    "RowCount": true
  },
  "protected": ["password"],
  "properties": {
    "title": {
      "type": "string"
    },
    "organization": {
      "type": "string"
    },
    "position": {
      "type": "string"
    },
    "givenName": {
      "type": "string"
    },
    "familyName": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "required": true
    },
    "country": {
      "type": "string"
    },
    "phoneNumber": {
      "type": "string"
    },
    "profilePicture": {
      "type": "string",
      "default": "avatar_anonymous.png"
    },
    "password": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "default": "INACTIVE"
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "CustomAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "role": {
      "type": "belongsTo",
      "model": "UserRole"
    },
    "mainTopics": {
      "type": "hasMany",
      "model": "MainTopic",
      "foreignKey": "mainTopicId",
      "through": "TopicInvitation",
      "keyThrough": "userId"
    },
    "notificationConfig": {
      "type": "belongsTo",
      "model": "NotificationConfig"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
